<div class="w-full p-6 mx-auto bg-white rounded-lg shadow-md md:w-2/3">
  <h2 class="mb-6 text-2xl font-bold text-center">Sign in</h2>
  <div class="max-w-md mx-auto">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 text-sm font-medium mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2 rounded border-gray-300 text-blue-500 focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "text-gray-700 text-sm font-medium" %>
        </div>
      <% end %>
      <div class="mb-4 actions">
        <%= f.submit "Sign in", class: "w-full bg-teal-500 hover:bg-teal-600 text-white font-medium py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-400 focus:ring-offset-2" %>
      </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
