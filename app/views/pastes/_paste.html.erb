<div id="<%= dom_id paste %>">
  <p>
    <strong class="mb-1 font-medium">Title:</strong>
    <%= paste.title %>
  </p>
  <div class="mt-5">
    <strong class="block mb-1 font-medium">Content:</strong>
    <div class="paste-content">
      <p class="hidden" data-copy-target="source"><%= @paste.content_file.download %></p>
      <pre data-copy-target="source" class="line-numbers">
        <code class="<%= @paste.language %> max-h-96"><%= @paste.content_file.download %></code>
      </pre>
    </div>
  </div>
</div>
