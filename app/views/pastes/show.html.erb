<div class="flex w-full mx-auto md:w-2/3">
  <div class="w-full mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>
    <%= render @paste %>
    <div class="inline-block">
      <%= button_to "Destroy this paste", @paste, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
